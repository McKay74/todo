<h2>Current Lists</h2>
<div class="col-md-4 pull-right">
  <% if policy(List.new).create? %>
    <%= link_to "New List", new_list_path, class: 'btn btn-success' %>
  <% end %>
</div>
<% @lists.each do |list| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading col-md-4">
        <%= link_to list.name, list %>
      </h4>
      <div class="col-md-4">
        <% if policy(List.new).create? %>
          <small> <%= link_to "Delete List", list, method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } %> </small>
        <% end %>
      </div>
    </div>    
  </div>
<% end %>


